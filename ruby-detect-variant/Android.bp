cc_binary {
    name: "ruby-detect-variant",
    srcs: [
        "ruby-detect-variant.c",
        "write-recovery-log.c",
        "load-variant.c",
    ],
    cflags: [
        "-O3",
        "-g",
        "-Wall",
        "-Wextra",
